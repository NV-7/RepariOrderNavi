<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RepairOrderActivity">

    <EditText
        android:id="@+id/orderInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/orderHeader"
        app:layout_constraintTop_toTopOf="@+id/orderHeader" />

    <TextView
        android:id="@+id/technitianHeader"
        android:layout_width="141dp"
        android:layout_height="0dp"
        android:layout_marginTop="29dp"
        android:text="@string/Technitian_Header"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/orderHeader"
        app:layout_constraintTop_toBottomOf="@+id/orderHeader" />

    <EditText
        android:id="@+id/laborInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/orderHeader"
        app:layout_constraintTop_toTopOf="@+id/laborHeader" />

    <EditText
        android:id="@+id/technititanInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/orderHeader"
        app:layout_constraintTop_toTopOf="@+id/technitianHeader" />

    <EditText
        android:id="@+id/partInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/orderHeader"
        app:layout_constraintTop_toTopOf="@+id/partHeader" />

    <EditText
        android:id="@+id/paintInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/orderHeader"
        app:layout_constraintTop_toTopOf="@+id/paintHeader" />

    <EditText
        android:id="@+id/inspectioninput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/orderHeader"
        app:layout_constraintTop_toTopOf="@+id/inspectionHeader" />

    <TextView
        android:id="@+id/inspectionHeader"
        android:layout_width="141dp"
        android:layout_height="39dp"
        android:layout_marginTop="89dp"
        android:text="@string/Inspection_Header"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/orderHeader"
        app:layout_constraintTop_toBottomOf="@+id/orderHeader" />

    <TextView
        android:id="@+id/paintHeader"
        android:layout_width="141dp"
        android:layout_height="39dp"
        android:layout_marginTop="148dp"
        android:text="@string/Paint_Header"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/orderHeader"
        app:layout_constraintTop_toBottomOf="@+id/orderHeader" />

    <TextView
        android:id="@+id/partHeader"
        android:layout_width="141dp"
        android:layout_height="39dp"
        android:layout_marginTop="212dp"
        android:text="@string/Part_Header"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/orderHeader"
        app:layout_constraintTop_toBottomOf="@+id/orderHeader" />

    <TextView
        android:id="@+id/laborHeader"
        android:layout_width="141dp"
        android:layout_height="39dp"
        android:layout_marginTop="272dp"
        android:text="@string/Labor_Header"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/orderHeader"
        app:layout_constraintTop_toBottomOf="@+id/orderHeader" />

    <TextView
        android:id="@+id/repairHeader"
        android:layout_width="483dp"
        android:layout_height="0dp"
        android:layout_marginTop="100dp"
        android:text="@string/Repair_Header"
        android:textAlignment="center"
        android:textColor="#100808"
        android:textSize="48sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/orderHeader"
        android:layout_width="141dp"
        android:layout_height="39dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="32dp"
        android:text="@string/Order_Header"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/repairHeader"
        app:layout_constraintTop_toBottomOf="@+id/repairHeader" />

    <TextView
        android:id="@+id/subtotalHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="@string/Subtotal_Header"
        app:layout_constraintStart_toStartOf="@+id/laborInput"
        app:layout_constraintTop_toBottomOf="@+id/laborInput" />

    <TextView
        android:id="@+id/taxHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/Tax_Header"
        app:layout_constraintStart_toStartOf="@+id/subtotalHeader"
        app:layout_constraintTop_toBottomOf="@+id/subtotalHeader" />

    <TextView
        android:id="@+id/totalHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="@string/Total_Header"
        app:layout_constraintStart_toStartOf="@+id/subtotalHeader"
        app:layout_constraintTop_toBottomOf="@+id/subtotalHeader" />

    <TextView
        android:id="@+id/subtotalInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="36dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/laborInput"
        app:layout_constraintTop_toBottomOf="@+id/laborInput" />

    <TextView
        android:id="@+id/taxinput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/subtotalInput"
        app:layout_constraintTop_toBottomOf="@+id/subtotalInput" />

    <TextView
        android:id="@+id/totalInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/taxinput"
        app:layout_constraintTop_toBottomOf="@+id/taxinput" />

</androidx.constraintlayout.widget.ConstraintLayout>